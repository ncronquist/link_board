          <!-- <li><%# link_to "Posts", posts_path %></li> -->
          <!-- <li><%# link_to "Add Post", new_post_path %></li> -->
          <% if @current_user %>
            <li><%= link_to "My Posts", posts_path %></li>
            <li><%= link_to "Logout", logout_path %></li>
          <% else %>
            <li><%= link_to "Login", login_path %></li>
            <li><%= link_to "Sign Up", signup_path %><li>
          <% end %>

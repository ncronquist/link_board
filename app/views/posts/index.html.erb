<h1>Posts for <%= @current_user.name %></h1>

<div class="row">
  <div class="col-xs-12 col-sm-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Link</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.link %></td>
            <td>
              <%= link_to "Edit", edit_post_path, :class => "btn btn-success" %>

            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
